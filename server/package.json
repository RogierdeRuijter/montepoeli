{
  "name": "server",
  "description": "Server of montepoeli",
  "author": "Me",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "get-v": "grep '\"version\":' package.json | cut -d\\\" -f4",
    "build:pre-push": "npm run build && rm -r dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "install-node-modules": "npm install",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:coveralls": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "6.11.8",
    "@nestjs/core": "6.11.8",
    "@nestjs/jwt": "6.1.2",
    "@nestjs/mongoose": "6.3.1",
    "@nestjs/passport": "6.2.0",
    "@nestjs/platform-express": "6.11.8",
    "@nestjs/testing": "6.11.8",
    "@nestjs/typeorm": "6.3.3",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.2",
    "@types/faker": "4.1.10",
    "@types/jest": "25.1.3",
    "@types/mongoose": "^5.7.6",
    "@types/node": "13.7.7",
    "@types/supertest": "2.0.8",
    "bcrypt": "4.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "1.4.4",
    "faker": "4.1.0",
    "mongoose": "5.9.4",
    "mysql": "2.18.1",
    "passport": "0.4.1",
    "passport-http-bearer": "1.0.1",
    "passport-jwt": "4.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.4",
    "typeorm": "0.2.24",
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "jest": "25.1.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
